[alias]
  a = add -v
  c = commit -m
  ca = commit -am
  cam = commit --amend
  can = commit --amend --no-edit
  cl = clone -v
  cl1 = clone --depth=1 -v
  pl = pull --prune --progress --autostash --rebase=true -v
  plm = pull --prune --progress --autostash --rebase=false -v
  p = push -v
  pp = push --prune -v
  pa = push --all -v
  pt = push --tags -v
  b = branch -v
  ba = branch -avv -v
  bd = push origin --delete -v
  td = !"git tag --delete $1; git push -v origin --delete $1 #"
  s = status -vs
  st = stash -u
  stp = stash pop
  stl = stash list
  m = merge -v
  r = rebase -v
  rc = rebase --continue
  ra = rebase --abort
  rs = reset
  co = checkout
  rh = reset --hard
  sw = switch
  f = fetch -v
  fa = fetch --all -v
  chp = cherry-pick -v
  d = diff --color --color-words --abbrev
  rn = !"git pl && git rebase origin/${1:-next} && git push -f #"
  feat = !"git fetch && git switch -c feat/$1 origin/next && git push -u #"
  sep = !"git fetch && git switch -c feat/$1 origin/next && shift && git cherry-pick $@ && git push -u && gh pr create --assignee @me --base next --fill --web #"
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  # Show the diff between the latest commit and the current state
  df = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
  t = tag -ln3
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  cleanup = !"git reflog expire --all --expire=now && \
              git gc --prune=now --aggressive && \
              git prune && \
              git remote | while read remote; do echo "Pruning remote: $remote"; git remote prune "$remote"; done"
  delete-all-branch= !"git branch | grep -v \"next\" | xargs git branch -D"

[help]
  autocorrect = 1

[push]
  default = current
  verbose = true

[pull]
  rebase = false
  verbose = true

[branch]
  autosetupmerge = true

[color "diff"]
  meta = yellow bold
  commit = green bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

# [http]
#   sslVerify = false

# [credential]
#   helper = manager

[core]
  autocrlf = input

[init]
  defaultBranch = main

[commit]
	gpgsign = true

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[fetch]
  verbose = true
[log]
	date = default
